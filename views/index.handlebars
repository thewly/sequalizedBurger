<div class="container-fluid">
  <div class="container">
    <div class="row">
      <div class="col-sm-4">

      </div>
      <div class="col-sm-4">
        <h1 class="text-center">Burgers Tracker App!</h1>
        <img class="rounded mx-auto d-block" height="300px" width="100%" src="http://pngimg.com/uploads/burger_sandwich/burger_sandwich_PNG4114.png">
      </div>
      <div class="col-sm-4">

      </div>
    </div>
  </div>
  <div class="row" >
    <div class="col-md-6" id="Eat">

  <h2>Burgers I want to eat.</h2>
      <ul>
        {{#each burgers}}
        {{#unless eaten}}
        <li>
	{{name}}

	<button class="change-eaten" data-id="{{id}}" data-neweaten="true">
		Eat It
	</button>

	
</li>

        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6" id="Completed">

      <h2>Devoured Burgers</h2>

      <ul>
        {{#each burgers}}
        {{#if eaten}}
       <li id="li2">
	{{name}}
	
</li>

        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row" id="AddBurger">
    <div class="col-md-12">

      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <div class="form-group">
          <label for="eaten">Eaten?</label><br>
          <input type="radio" name="eaten" value="1" checked> Devoured<br>
          <input type="radio" name="eaten" value="0"> To Eat
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>